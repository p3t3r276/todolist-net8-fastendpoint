{
    "ConnectionStrings": {
        "SQLServer": "Server=(localdb)\\MSSQLLocalDB;Database=FastTodo;Integrated Security=True;Trusted_Connection=True;MultipleActiveResultSets=true",
        "SQLite": "Data Source=FastTodo.db;",
        "Postgres": "Server=127.0.0.1;Port=5432;Database=fasttodo;User Id=myuser;Password=mypassword;"
    },
  "SqlProvider": "SQLServer",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/{Date}.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "FastTodo"
    }
  }
}
